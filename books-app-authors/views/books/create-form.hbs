<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h1>Nuevo libro</h1>

            <form action="/libros/crear" method="post">
                <div class="form-group">
                    <label for="title">Título</label>
                    <input name="title" type="text" class="form-control" id="title">
                </div>
                <div class="form-group">
                    <label for="description">Descripción</label>
                    <input name="description" type="text" class="form-control" id="description">
                    <small class="form-text text-muted">No te extiendas demasiado, chato.</small>
                </div>
                <div class="form-group">
                    <label for="author">Autor</label>
                    <input name="author" type="text" class="form-control" id="author">
                </div>
                <div class="form-group">
                    <label for="rating">Puntuación</label>
                    <input name="rating" type="number" class="form-control" id="rating">
                </div>

                <button type="submit" class="btn btn-dark">Crear libro</button>
            </form>
        </div>
    </div>




